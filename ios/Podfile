platform :ios, '13.0'

# We remove the "load" line that was causing the error.
# Instead, we define the target and let Codemagic's environment 
# handle the Flutter injection.

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # Standard Flutter pod discovery
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
      
      # Forcing the module definition for Firestore
      config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
      config.build_settings['DEFINES_MODULE'] = 'YES'
    end
  end
end