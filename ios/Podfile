platform :ios, '13.0'

# We manually define the missing Flutter helper to stop the crash
def flutter_additional_ios_build_settings(target)
  target.build_configurations.each do |config|
    config.build_settings['ENABLE_BITCODE'] = 'NO'
    config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
  end
end

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # This is the standard way to grab your Flutter plugins
  # Codemagic will handle the 'podhelper' part automatically if this is present
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    
    # Specific fix for 'cloud_firestore' module error
    target.build_configurations.each do |config|
      config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
      config.build_settings['DEFINES_MODULE'] = 'YES'
    end
  end
end